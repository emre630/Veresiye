  // Listeyi filtreleme
  function filtrele() {
    const searchQuery = document.getElementById("arama").value.toLowerCase();
    const filteredList = veresiyeListesi.filter((k) =>
      k.isim.toLowerCase().includes(searchQuery)
    );
    veresiyeListesi = filteredList;
    guncelleListe();
  }

